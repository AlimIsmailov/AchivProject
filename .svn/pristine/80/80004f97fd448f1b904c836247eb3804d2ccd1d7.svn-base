<%@ include file="../../template/default/taglib.jsp"%>
<tiles:insertDefinition name="defaultTemplate">
	<tiles:putAttribute name="body">
		<form:form class=" form-fix form-horizontal" role="form"
			action='${pageContext.request.contextPath}/j_spring_security_check'
			method='POST'>
			<div class="form-group">
				<div class=" col-sm-offset-1 col-sm-10">
					<h2 class="form-signin-heading">
						<spring:message code="label.pleasesignin" />
					</h2>
					<c:if test="${error}">
						<p style="color: red">
							<spring:message code="label.loginpasincor" />
						</p>
					</c:if>
					<input type="text" class="form-control" id="inputEmail3"
						placeholder="<spring:message code="label.login"/>"
						name='j_username' />
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-1 col-sm-10">
					<input type="password" class="form-control" name='j_password'
						placeholder="<spring:message code="label.password"/>" />
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-1 col-sm-10">
					<button type="submit" class="btn btn-lg btn-primary btn-block">
						<spring:message code="label.signin" />
					</button>

				</div>
			</div>
		</form:form>
	</tiles:putAttribute>
</tiles:insertDefinition>